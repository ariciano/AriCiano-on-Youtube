//sketch.js****

var myRec = new p5.SpeechRec(); 
var r = 0;
var g = 255;
var b = 201;

var nina, willow, beyonce, sza, pharrell, aaliyah, sade, lauryn;

function preload() {
  nina = loadImage('nina.png');
  willow = loadImage('willow.png');
  beyonce = loadImage('beyonce.png');
  sza = loadImage('sza.png');
 pharrell = loadImage('pharrell.png');
  aaliyah = loadImage('aaliyah.png');
  sade = loadImage('sade.png');
  lauryn = loadImage('lauryn.png');
  
}


function setup() {
  createCanvas(400, 400);
  let continuous = true;
  let interim = false;
  myRec.start(continuous, interim);
}

function draw() {
  background(r,g,b);
  showResult();
}

function showResult() {
  if (myRec.resultValue == true) {
    fill(255,55,0);
    textSize(50);
    textFont('Germania One');
    text(myRec.resultString,10,170);
    print(myRec.resultString);
  }
  
  if (myRec.resultString == 'yellow') {
    r = 242;
    g = 207;
    b = 12;
  } else if (myRec.resultString == 'blue') {
    r = 0;
    g = 16;
    b = 255;
  } else if (myRec.resultString == 'Nina') {
    image(nina,50,50,400,400);
    r = 100;
    g = 16;
    b = 255;
  } else if (myRec.resultString == 'Willow') {
    image(willow,50,50,400,400);
    r = 172;
    g = 162;
    b = 255;
  } else if (myRec.resultString == 'Beyonce') {
    image(beyonce,50,50,400,400);
    r = 172;
    g = 102;
    b = 255;
  } else if (myRec.resultString == 'sza') {
    image(sza,50,50,400,400);
    r = 272;
    g = 102;
    b = 255;
  } else if (myRec.resultString == 'Pharrell') {
    image(pharrell,50,50,400,400);
    r = 272;
    g = 102;
    b = 55;
  } else if (myRec.resultString == 'Aaliyah') {
    image(aaliyah,50,50,400,400);
    r = 272;
    g = 202;
    b = 55;
  } else if (myRec.resultString == 'Sade') {
    image(sade,50,50,400,400);
    r = 272;
    g = 102;
    b = 155;
  } else if (myRec.resultString == 'Lauren') {
    image(lauryn,50,50,400,400);
    r = 172;
    g = 52;
    b = 55;
  }
  
}
